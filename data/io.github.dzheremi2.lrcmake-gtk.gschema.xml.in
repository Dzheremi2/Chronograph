<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="Chronograph">
  <schema id="@APP_ID@" path="@PREFIX@/">
    <key name="auto-file-manipulation" type="b">
      <default>true</default>
    </key>
    <key name="auto-file-format" type="s">
      <choices>
        <choice value=".lrc" />
        <choice value=".txt" />
      </choices>
      <default>".lrc"</default>
    </key>
    <key name="autosave-throttling" type="i">
      <range min="1" max="10" />
      <summary>Autosave throttling interval in seconds</summary>
      <default>5</default>
    </key>
    <key name="reset-quick-editor" type="b">
      <default>true</default>
    </key>
    <key name="save-session" type="b">
      <default>false</default>
    </key>
    <key name="precise-milliseconds" type="b">
      <default>false</default>
    </key>
    <key name="auto-list-view" type="b">
      <default>false</default>
    </key>
    <key name="recursive-parsing" type="b">
      <default>false</default>
    </key>
    <key name="follow-symlinks" type="b">
      <default>false</default>
    </key>
    <key name="load-compressed-covers" type="b">
      <default>false</default>
    </key>
    <key name="compress-level" type="i">
      <default>75</default>
    </key>
    <key name="default-format" type="s">
      <!-- Will be extended when other formats will be available -->
      <choices>
        <choice value="lrc" />
      </choices> 
      <default>"lrc"</default>
    </key>
  </schema>

  <schema id="@APP_ID@.State" path="@PREFIX@/State/">
    <key name="sorting" type="s">
      <choices>
        <choice value="a-z" />
        <choice value="z-a" />
      </choices>
      <default>"a-z"</default>
    </key>
    <key name="view" type="s">
      <choices>
        <choice value="g" />
        <choice value="l" />
      </choices>
      <default>"g"</default>
    </key>
    <key name="window-width" type="i">
      <default>700</default>
    </key>
    <key name="window-height" type="i">
      <default>600</default>
    </key>
    <key name="window-maximized" type="b">
      <default>false</default>
    </key>
    <key name="opened-dir" type="s">
      <default>"None"</default>
    </key>
  </schema>
</schemalist>
