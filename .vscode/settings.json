{
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/.hg/store/**": true,
        ".flatpak/**": true,
        "_build/**": true
    },
    "files.associations": {
        "*.py.in": "python",
        "chronograph.in": "python",
        "*.yaml.in": "yaml",
        "*.xml.in": "xml",
        ".doap": "xml",
        "*.blp.in": "blueprint-gtk"
    },
    "xml.fileAssociations": [
        {
            "pattern": "**/*.metainfo.xml*",
            "systemId": "${workspaceFolder}/docs/schemas/appstream-metainfo.xsd"
        }
    ],
    "search.followSymlinks": false,
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        "editor.rulers": [88],
        "editor.tabSize": 2,
    },
    "isort.args":["--profile", "ruff"],
    "python.analysis.diagnosticSeverityOverrides": {
        "reportMissingModuleSource": "none"
    },
    "python.analysis.autoImportCompletions": true,
    "autoDocstring.docstringFormat": "numpy",
    "ruff.lint.enable": true,
    "mesonbuild.configureOnOpen": false,
    "mesonbuild.buildFolder": "_build",
    "mesonbuild.mesonPath": "${workspaceFolder}/.flatpak/meson.sh"
}